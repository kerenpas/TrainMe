<!-- styles.xml -->
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Accent color for interactive elements -->
        <item name="colorAccent">@color/accent</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/background_light</item>
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/text_on_light</item>
    </style>

    <!-- Dark theme variant -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_on_dark</item>
    </style>
    <!-- styles.xml -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_dark</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>


</resources>